BRUTE - 

vector<int> firstNegative(vector<int> arr, int n, int k) {
	vector<int> ans;
	for(int i = 0; i < n; i++) {
		for(int j = i; j < n; j++) {
			if((j-i+1) < k) j++;
			else if((j-i+1) == k) {
				if(arr[i] < 0) ans.push_back(arr[i]);
				else if(arr[i] > 0) ans[i] = 0;
				i++, j++;
			}
		}
	}
	return ans;
}

OPTIMAL - 

#include <bits/stdc++.h>

vector<int> firstNegative(vector<int> arr, int n, int k) {
	queue<int> q;
	vector<int> ans;
	int i = 0, j = 0;

	while(j < n) {
		if(arr[j] < 0) q.push(j);

		if((j-i+1) < k) j++;

		else if((j-i+1) == k) {
			if(q.empty()) ans.push_back(0);
			else {
				ans.push_back(arr[q.front()]);
				if(q.front() == i) q.pop(); 
			}
			i++, j++;
		}
	}
	return ans;
}
